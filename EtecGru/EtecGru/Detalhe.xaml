<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EtecGru.Detalhe"
             Title="Página Principal">
    <ContentPage.Content>
        <StackLayout Margin="20,35,20,20">
            <Image Source="logo_etec"
               WidthRequest="{OnPlatform iOS=300, Android=250}"
               HorizontalOptions="Center" />
            <Label 
                Text="Neste App você terá acesso à informações sobre os cursos da Escola e poderá também contatar a escola via e-mail, telefone e até buscar a rota para a Escola"
                 FontSize="Large"
                HorizontalTextAlignment="Center"
                />
            <Label
                Text="&#10;Utilize o menu ao lado para navegar!"
                HorizontalOptions="CenterAndExpand"
                FontSize="Large"
                />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>